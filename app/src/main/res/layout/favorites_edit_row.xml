<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/favoritesEditLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etRecipeNotesEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvRecipeSummaryEdit"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/ivRecipeImageEdit"
                android:background="#FFFFFF"
                android:ems="10"
                android:gravity="center|center_horizontal|center_vertical"
                android:hint="Add Recipe Notes"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvRecipeTitleEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/ivRecipeImageEdit"
                android:gravity="center"
                android:text="Fish Pie With Fresh and Smoked Salmon"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/ivRecipeImageEdit"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/ivDeleteRecipe"
                android:layout_width="61dp"
                android:layout_height="37dp"
                android:layout_below="@+id/etRecipeNotesEdit"
                android:layout_marginStart="89dp"
                android:layout_marginTop="33dp"
                android:layout_toEndOf="@+id/btnClearNotes"
                app:srcCompat="@drawable/ic_delete" />

            <Button
                android:id="@+id/btnClearNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etRecipeNotesEdit"
                android:layout_marginStart="8dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/ivRecipeImageEdit"
                android:text="Clear Notes" />

            <TextView
                android:id="@+id/tvRecipeSummaryEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvRecipeTitleEdit"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/ivRecipeImageEdit"
                android:text="TextView" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>